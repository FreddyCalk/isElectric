<% include head %>

<body>
	<header>
		<% include header %>
	</header>
<div id="content-container">
	<p>Is this one of your Dream Cars?</p>

	<h2><%= photo.name %></h2>
	<img src="<%= photo.src%>">
	<div id="button-container">
	<form class = "vote-button" action="./favorites" method="post">
		<input type="hidden" name = "vote" value="<%='favorites'%>">
		<input type="hidden" name = "name" value="<%=photo.name%>">
		<input type="hidden" name = "src" value="<%=photo.src%>">
		<input type="submit" class="btn btn-success" value="Add to List">
	</form>
	<form class="vote-button" action="./losers" method="post">
		<input type="hidden" name = "vote" value="<%='pass'%>">
		<input type="hidden" name = "name" value="<%=photo.name%>">
		<input type="hidden" name = "src" value="<%=photo.src%>">
		<input type="submit" class="btn btn-danger" value="Trash">
	</form>
	</div>
</div>
	<footer>
		<% include footer %>
	</footer>
</body>
</html>